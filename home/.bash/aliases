# vim: set ft=sh:

# aliases
alias ls='ls -h --color=auto'   # yay
alias a='ls -lF'                #
alias ad='ls -lFd'              #
alias a.='ls -lF .*'            #
alias ad.='ls -ldF .*'          #
alias aa='ls -alF'              #
alias at='ls -lFtr'             #
alias aat='ls -alFtr'           #
alias as='ls -lFSr'             #
alias aas='ls -alFSr'           #
alias aad='ls -aldF'            #
alias aa.='ls -alF .*'          #
alias aad.='ls -aldF .*'        #

alias rm='rm -i'  # woopsy
alias mv='mv -i'  #
alias cp='cp -i'  #

alias ..='cd ..'

alias grep='egrep --color=auto'     # actual commands
alias ftp=lftp                      #
                                       
alias p='pstree -U'                     #  made-up aliases for common tasks
alias pp='ps faxww'                     #
alias pg='pgrep -lf'                    #
alias pgg='pgrep -lfa'                  #
alias w='sudo'                          #
alias count='wc -l'                     #
alias chx='chmod a+x'                   #
alias chw='sudo chmod a+w'              #
alias chr='sudo chmod a-w'              #
alias chb='sudo chown campbb6:campbb6'  #
alias untargzip='tar xvzf'
alias untarbzip='tar xvjf'
alias n='sudo ss -ltpn'
alias td='sudo tcpdump -nn'
alias gr='grep -RIsi --exclude-dir=.git --exclude-dir=.tox'
alias gri='grep -RIs'
alias gra='grep -RIsi --exclude-dir=/proc --exclude-dir=/sys --exclude-dir=/dev'
alias t='tree -aCI .git\|.tox'
alias r2='ssh -l root'
alias vv='vim ~/.vimrc'
alias va='vim ~/.bash/aliases'
alias vp='vim ~/.bash_profile'
alias na='. ~/.bash/aliases'
alias np='. ~/.bash_profile'
alias vh='vim /etc/hosts'

alias j='journalctl -xab |less +G'
alias jf='journalctl -xfab'
alias uf='systemctl list-unit-files'
alias pd=pushd
alias tf='tail -f'
alias d='env LESS="$LESS +G" dmesg'

if grep -iwq ubuntu /etc/issue; then
    alias aptdate='sudo apt-get update'
    alias cache='apt-cache search'
    alias pmi='sudo apt-get install'
elif grep -iwq centos /etc/issue; then
    alias cache='sudo yum search'
    alias pmi='sudo yum install'
elif grep -iwq arch /etc/issue; then
    alias aptdate='sudo pacman -Syy'
    alias cache='pacman -Ss'
    alias pmi='sudo pacman -S'
fi

    alias ww=~/g2sh.pl

if [[ $(hostname) =~ archie ]]; then
    alias kc='knife client list'
    alias kcc='knife client show'
    alias kcd='knife client delete'

    alias kn='knife node list'
    alias knn='knife node show'
    alias kne='knife node edit'
    alias knd='knife node delete'

    #alias ke='knife environment list' # function
    alias kee='knife environment edit'

fi
