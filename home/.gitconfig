[user]
    name  = Brett Campbell
    email = invsblduck@gmail.com

[init]
    templatedir = ~/.git_template

[push]
    default = simple

[color]
    diff = true
    grep = true
    status = true
    branch = true

[alias]
    a     = add
    aa    = add -A
    b     = branch
    c     = commit
    ca    = commit -a
    co    = checkout
    cob   = checkout -b
    com   = checkout master
    d     = diff
    dc    = diff --cached
    fu    = fetch upstream
    p     = push
    s     = status
    sh    = show
    sho   = show
    ctags = !.git/hooks/ctags
    emc   = !git-emc.sh

[github]
    user = invsblduck

[gitreview]
    username = invsblduck

[grep]
	patternType = extended
