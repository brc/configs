[user]
    name  = Brett Campbell
    email = invsblduck@gmail.com

[init]
    templatedir = ~/.git_template

[push]
    default = simple

[color]
    diff = true
    grep = true
    status = true
    branch = true

[alias]
    ctags   = !.git/hooks/ctags
    emc     = !git-config.sh emc
    liberty = !git-config.sh liberty
    logmein = !git-config.sh lmi
    who     = !git-who.sh
    where   = !git-where.sh

[github]
    user = invsblduck

[gitreview]
    username = invsblduck

[grep]
    patternType = extended
    extendRegexp = true
    lineNumber = true
