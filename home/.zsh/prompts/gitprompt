# vim: set ft=sh :

GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWSTASHSTATE=true
GIT_PS1_SHOWCOLORHINTS=true
GIT_PS1_SHOWUPSTREAM='git verbose'
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_DESCRIBE_STYLE=branch

. ~/.git-prompt.sh
. ~/.zsh/lib/colors.sh

precmd () {
    __git_ps1 \
        "${IBlack}[${Color_Off}" \
        "${BGreen}%~${IBlack}]\$${Color_Off} " \
        "(%s) "
}
